<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgIconTab"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginTop="@dimen/size_2"
            android:padding="2.5dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/view_badge"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/bg_circler_tab"
            android:fontFamily="@font/sf_regular_400"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="@dimen/_1sdp"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_6sdp"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/imgIconTab"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/notification_badge"
            style="@style/Text14TitleRegular400"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/bg_circler_tab"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="@dimen/_1sdp"
            android:singleLine="true"
            android:text="99+"
            android:visibility="gone"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_4sdp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/imgIconTab"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIconTab"
            style="@style/Text14TitleRegular400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lines="1"
            android:textSize="@dimen/_8ssp"
            android:text="@string/tab_home"
            android:textColor="@color/active"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgIconTab" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>